{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "./build",
    "lib": ["es5", "es6", "es2019"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "resolveJsonModule": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "static/*"
  ]
}
